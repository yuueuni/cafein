package com.web.cafe.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.web.cafe.dao.MenuDao;
import com.web.cafe.dto.MenuDto;

@Service
public class MenuServiceImpl implements MenuService {

	@Autowired
	private MenuDao dao;
	
	@Override
	public MenuDto select(int cafeno) {
		return dao.select(cafeno);
	}

	@Override
	public int insert(MenuDto menu) {
		return dao.insert(menu);
	}

	@Override
	public int updateItem(MenuDto menu) {
		return dao.updateItem(menu);
	}

	@Override
	public int updatePrice(MenuDto menu) {
		return dao.updatePrice(menu);
	}

	@Override
	public int deleteItem(MenuDto menu) {
		return dao.deleteItem(menu);
	}

	@Override
	public int deleteAll(int cafeno) {
		return dao.deleteAll(cafeno);
	}

}
