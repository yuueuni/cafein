<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="menu">
	
 	<select id="select" resultType="MenuDto">
 		select *
 		from menu
 		where cafeno = #{cafeno}
	</select>
		
	<insert id="insert">
		insert into menu (cafeno,item,price)
		values (#{cafeno}, #{item}, #{price})
	</insert>
	
	
	<update id="updateItem">
		update menu
		set item = "updateItem"
		where mno = #{mno} and item = #{item}
	</update>
	
	<update id="updatePrice">
		update menu
		set price = #{price}
		where mno = #{mno} and item = #{item}	
	</update>
	
	
	<delete id="deleteItem">
		delete from menu
		where cafeno = #{cafeno} and item = #{item}
	</delete>
	
	<delete id="deleteAll">
		delete from menu
		where cafeno = #{cafeno}
	</delete>
	
	
</mapper>

